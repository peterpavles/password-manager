<TabPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1">
   <tabs>
      <Tab closable="false" text="%editCardDialog.tab.fields">
         <content>
            <BorderPane prefHeight="200.0" prefWidth="200.0">
               <center>
                  <TableView fx:id="cardContentView" editable="true" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <columns>
                      <TableColumn fx:id="fieldNameColumn" prefWidth="75.0" sortable="false" style="-fx-alignment: CENTER-RIGHT;" />
                      <TableColumn fx:id="fieldValueColumn" prefWidth="75.0" sortable="false" style="-fx-alignment: CENTER-LEFT;" />
                    </columns>
                     <contextMenu>
                        <ContextMenu>
                          <items>
                            <MenuItem mnemonicParsing="false" onAction="#onNewField" text="%editCardDialog.menu.addField" />
                              <SeparatorMenuItem mnemonicParsing="false" />
                              <MenuItem mnemonicParsing="false" onAction="#onDeleteField" text="%editCardDialog.menu.deleteField" />
                          </items>
                        </ContextMenu>
                     </contextMenu>
                  </TableView>
               </center>
               <bottom>
                  <GridPane hgap="5.0" vgap="5.0" BorderPane.alignment="CENTER">
                    <columnConstraints>
                      <ColumnConstraints hgrow="NEVER" minWidth="10.0" />
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <Label text="%label.FieldName" />
                        <TextField fx:id="fieldNameEdit" GridPane.columnIndex="1" />
                        <Label text="%label.FieldType" GridPane.rowIndex="1" />
                        <ComboBox fx:id="fieldTypeCombo" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                     </children>
                     <BorderPane.margin>
                        <Insets top="5.0" />
                     </BorderPane.margin>
                  </GridPane>
               </bottom>
            </BorderPane>
         </content>
      </Tab>
      <Tab closable="false" text="%editCardDialog.tab.notes">
         <content>
            <TextArea fx:id="noteEditor" prefHeight="200.0" prefWidth="200.0" />
         </content>
      </Tab>
      <Tab closable="false" text="%editCardDialog.tab.properties">
         <content>
            <GridPane hgap="5.0" vgap="5.0">
              <columnConstraints>
                <ColumnConstraints hgrow="NEVER" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
              </rowConstraints>
               <children>
                  <Label text="%label.Name" />
                  <Label text="%label.Icon" GridPane.rowIndex="1" />
                  <TextField fx:id="cardNameEdit" prefColumnCount="30" GridPane.columnIndex="1" />
                  <ComboBox fx:id="pictureList" GridPane.columnIndex="1" GridPane.rowIndex="1" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </GridPane>
         </content>
      </Tab>
   </tabs>
</TabPane>
